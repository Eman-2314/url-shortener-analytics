// Generatses a client for inquries like find user
generator client {
  provider = "prisma-client-js"
}

// Tells Prisma What data base is being used and where to find the connection string.
datasource db {
  provider = "postgresql"
}

// Defines the table blueprint
model User{
  id Int @id @default(autoincrement())
  email String @unique
  password String
  createdAt DateTime @default(now())
}

